---
import Markdown from "@astrojs/markdown-component";

const { contents, variant } = Astro.props;
---

<h2 class={`heading heading-${variant}`}>
  <span class="placeholder">XYZ</span>
  <span class="heading-inner">
  {
    Object.keys(contents).map((lang) => (
      <span lang={lang}>
        {contents[lang]}
      </span>
    ))
  }
  </span>
</h2>

<style lang="scss">
  .heading {
    overflow: hidden;
    position: relative;
    margin-bottom: var(--halfspacing);
    &-level1 {
      font-size: var(--largerfont);
      text-align: center;
      margin-bottom: var(--spacing);
      .heading-inner {
        width: 100%;
      }
    }
  }
  .placeholder{
    visibility: hidden;
  }
  .heading-inner {
    position: absolute;
    top: 0;
    display: flex;
    flex-direction: column;
    transition: all 300ms ease-out;
  }
  :global(input[type="radio"][id="ja-JP"]:checked ~ main .heading-inner) {
    transform: translateY(-50%);
  }
</style>
