---
import Markdown from '@astrojs/markdown-component';

const { contents } = Astro.props;
---

<h1 class="name">
  <a class="name-link" href="/">
    <span class="name-wrapper">
      <span class="placeholder">XYZ</span>
      <span class="name-inner">
        <span lang="en">Sacha</span>
        <span lang="ja">グレフ</span>
      </span>
    </span>
    <span class="name-wrapper">
      <span class="placeholder">XYZ</span>
      <span class="name-inner">
        <span lang="en">Greif</span>
        <span lang="ja">サーシャ</span>
      </span>
    </span>
  </a>
</h1>

<style lang="scss">
  @import '../../stylesheets/_breakpoints.scss';

  .name {
    font-size: var(--extralargefont);
    // background: var(--black);
    // color: var(--white);
    @include small {
      font-size: var(--largerfont);
      text-align: center;
      margin-bottom: var(--halfspacing);
    }
  }
  .name-link {
    margin-bottom: 0;
    display: flex;
    flex-direction: column;
    color: var(--black);
  }
  .name-wrapper {
    overflow: hidden;
    position: relative;
  }
  .placeholder {
    visibility: hidden;
  }
  .name-inner {
    position: absolute;
    top: 0;
    display: flex;
    flex-direction: column;
    transition: all 300ms ease-out;
    width: 100%;
  }
  :global(input[type='radio'][id='ja-JP']:checked ~ main .name-inner) {
    transform: translateY(-50%);
  }
</style>
