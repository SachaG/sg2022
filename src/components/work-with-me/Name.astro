import Markdown from "@astrojs/markdown-component";

const { contents } = Astro.props;
---

<h1 class="heading">
  <span class="heading-wrapper">
    <span class="placeholder">XYZ</span>
    <span class="heading-inner">
      <span lang="en"> Sacha</span>
      <span lang="ja"> グレフ</span>
    </span>
  </span>
  <span class="heading-wrapper">
    <span class="placeholder">XYZ</span>
    <span class="heading-inner">
      <span lang="en"> Greif</span>
      <span lang="ja"> サーシャ</span>
    </span>
  </span>
</h1>

<style lang="scss">
  .heading {
    margin-bottom: 0;
    display: flex;
    flex-direction: column;
    font-size: var(--extralargefont);
  }
  .heading-wrapper {
    overflow: hidden;
    position: relative;
  }
  .placeholder {
    visibility: hidden;
  }
  .heading-inner {
    position: absolute;
    top: 0;
    display: flex;
    flex-direction: column;
    transition: all 300ms ease-out;
  }
