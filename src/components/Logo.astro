---
import icons from "../data/icons.yaml";
---

<div class="logo-block">
  <a href={"/"}>
    <div class="logo-image" set:html={icons.sg}></div>
    <span>Sacha Greif</span>
  </a>
</div>

<style lang="scss">
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  .logo-block {
    position: absolute;
    top: 0px;
    left: 50%;
    margin-top: -60px;
    margin-left: -60px;
    span {
      display: none;
    }
    // opacity: 0;
    // animation: fadeIn 400ms 700ms cubic-bezier(0.215, 0.610, 0.355, 1.000) 1;
    // animation-fill-mode: forwards;
    z-index: 120;
  }
  .logo-image {
    position: relative;
    width: 120px;
    height: 120px;
    background: var(--black);
    padding: 20px;
    border-radius: 100%;
    margin: 0;
    :global(path) {
      fill: var(--white);
    }
  }
</style>
