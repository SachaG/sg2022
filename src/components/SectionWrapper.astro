---

const {  index, background} = Astro.props;
---
<div
  class="section-block section"
  id={`section-${index}`}
  style={{ backgroundColor: background }}
>
<slot/>
</div>
<style lang="scss">
  @import "../stylesheets/_breakpoints.scss";

.section-block {
  @include small {
    padding: 10px 10px 10px 10px;
  }
  @include medium {
    padding: 20px 80px 20px 80px;
    min-height: 100vh;
  }
  @include large {
    padding: 40px 120px 40px 120px;
    min-height: 100vh;
  }
  display: grid;
  place-items: center;
  position: relative;
  &:last-of-type {
    .section-icon {
      &:after {
        display: none;
      }
    }
  }
  &.section-intro {
    perspective: 1000px;
    @include small {
      padding-top: 80px;
    }
  }
}
</style>